<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.tournament.TournamentFragment" android:background="#56638A">
    <ImageButton
            android:src="@drawable/baseline_add_circle_outline_black_24dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="89dp"
            android:tint="@color/touch_selector"
            android:layout_height="70dp" android:id="@+id/createTournamentBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="TODO" app:layout_constraintVertical_bias="0.874"
            android:layout_marginBottom="8dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/createTournamentBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.51"/>
</androidx.constraintlayout.widget.ConstraintLayout>