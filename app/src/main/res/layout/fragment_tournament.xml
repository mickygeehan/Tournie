<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.tournament.TournamentFragment" android:background="#56638A">
    <ImageButton
            android:src="@drawable/baseline_add_circle_outline_black_24dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="136dp"
            android:tint="@color/touch_selector"
            android:layout_height="100dp" android:id="@+id/createTournamentBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.851"/>
    <TextView
            android:text="@string/tournament_create_a_tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createTournamentTV"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createTournamentBtn" app:layout_constraintVertical_bias="0.0"
            android:fontFamily="@font/open_sans_light" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>