        <TextView
                android:text="Create Tournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:hint="Team names here plz"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:textStyle="bold"
                android:textAllCaps="false" android:typeface="normal"/>

