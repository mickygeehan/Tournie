        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:layout_margin="10dp"
                android:background="@drawable/border_drawable"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp">

            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_margin="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/editText4"
                    android:src="@drawable/baseline_save_black_24dp" android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_margin="20dp"
                    android:hint="Tournament Name"
                    android:id="@+id/editText4"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="30sp"/>
            <CheckBox
                    android:text="Home / Away Fixtures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox2"
                    android:layout_below="@+id/editText4"
                    android:layoutDirection="rtl"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="18sp" android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"/>
            <TextView
                    android:text="Number Of Rounds: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/checkBox2"
                    android:textSize="18sp" android:fontFamily="@font/open_sans_light" android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="4"
                    android:id="@+id/editText6"
                    android:layout_toRightOf="@+id/textView8"
                    android:layout_alignBottom="@+id/textView8"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Teams here please"
                    android:inputType="textMultiLine"
                    android:layout_below="@+id/textView8"
                    android:layout_margin="20dp"
                    android:ems="10"
                    android:id="@+id/editText7"/>

        </RelativeLayout>

